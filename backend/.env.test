# Local test environment for backend (do NOT commit secrets for production)
# Designed to work with docker/docker-compose.test.yml (Postgres on localhost:5432, Redis on localhost:6379)
NODE_ENV=test
PORT=3000
HOST=0.0.0.0

# Database (when using docker-compose from repo, mapped to localhost)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/navikid_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=navikid_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis
# Disabled by default in the test environment to avoid requiring a running
# Redis instance during unit tests. Set to 'true' when running integration
# tests that need a real Redis (e.g. with docker-compose.test.yml).
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT secrets (minimum 32 chars required by Zod validation)
JWT_ACCESS_SECRET=abcdefghijklmnopqrstuvwxyz012345
JWT_REFRESH_SECRET=abcdefghijklmnopqrstuvwxyz678901
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Sentry (disabled by default for local tests)
SENTRY_DSN=
