{
  "compilerOptions": {
    // Phase 1.1: Strict TypeScript enabled for type safety
    "strict": true, // Enables all strict type checking options
    "noImplicitAny": true, // Explicitly set (included in strict)
    "strictNullChecks": true, // Explicitly set (included in strict)
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["jest", "node", "react", "react-native"],
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["templates/**", "node_modules/**"],
  "extends": "expo/tsconfig.base"
}
